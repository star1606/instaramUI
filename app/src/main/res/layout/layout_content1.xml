<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.androidx.com/apk/res-auto"
            android:id="@+id/img_pro1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/propic1"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="YourStory"

            android:layout_toRightOf="@+id/img_pro1"
            android:gravity="left|center"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_action_name"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <!--        사진들어갈공간-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/content_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/postpic1" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bookmark"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView7"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/send" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView6"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/chat_bubble" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/like"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_pro2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/propic2"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_pro2"
            android:text="Liked by bhuvan.bam and 24 others "
            android:gravity="left|center"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="numbiker.ni"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/username"
            android:text="#sundayfunday #beach #relax #biking"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint = "Add a comment..."
            android:gravity="left"
            android:layout_toRightOf="@+id/img_pro3"
            android:layout_marginLeft="15dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.androidx.com/apk/res-auto"
            android:id="@+id/img_pro3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/propic3"
            app:civ_border_color="#FF000000"
            android:layout_marginLeft="5dp"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8 HOURS AGO"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"/>


    </LinearLayout>
</LinearLayout>
